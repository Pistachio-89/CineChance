generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                     String                  @id @default(cuid())
  name                   String?
  email                  String                  @unique
  emailVerified          DateTime?
  image                  String?
  hashedPassword         String?
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  mlProfileVersion       String?
  preferencesSnapshot    Json?
  recommendationStats    Json?
  birthDate              DateTime?
  agreedToTerms          Boolean                 @default(false)
  accounts               Account[]
  blacklists             Blacklist[]
  filterSessions         FilterSession[]
  intentSignals          IntentSignal[]
  sentInvitations        Invitation[]            @relation("InvitedBy")
  usedInvitations        Invitation[]            @relation("UsedBy")
  negativeFeedbacks      NegativeFeedback[]
  predictions            PredictionLog[]
  ratingHistory          RatingHistory[]
  recommendationEvents   RecommendationEvent[]
  recommendationLogs     RecommendationLog[]
  recommendationSettings RecommendationSettings?
  rewatchLogs            RewatchLog[]
  sessions               Session[]
  tags                   Tag[]
  userEmbedding          UserEmbedding?
  userSessions           UserSession[]
  watchList              WatchList[]
  personProfiles         PersonProfile[]

  // ML Feedback Loop relations
  recommendationDecisions RecommendationDecision[]
  modelCorrections        ModelCorrection[]
  adminCorrections        ModelCorrection[]     @relation("AdminCorrection")

  @@index([updatedAt])
  @@index([createdAt])
  @@index([email])
}

model Invitation {
  id          String    @id @default(cuid())
  email       String
  token       String    @unique
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
  usedAt      DateTime?
  usedById    String?
  createdById String
  createdBy   User      @relation("InvitedBy", fields: [createdById], references: [id], onDelete: Cascade)
  usedBy      User?     @relation("UsedBy", fields: [usedById], references: [id])

  @@index([email])
  @@index([token])
  @@index([createdById])
  @@index([expiresAt])
}

model RecommendationLog {
  id                   String                @id @default(cuid())
  userId               String
  tmdbId               Int
  mediaType            String
  algorithm            String
  score                Float?
  action               String?
  context              Json?
  shownAt              DateTime              @default(now())
  candidatePoolMetrics Json?
  filtersSnapshot      Json?
  mlFeatures           Json?
  temporalContext      Json?
  intentSignals        IntentSignal[]
  negativeFeedbacks    NegativeFeedback[]
  prediction           PredictionLog?
  ratingHistories      RatingHistory[]
  events               RecommendationEvent[]
  user                 User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  rewatchLogs          RewatchLog[]

  @@index([userId, shownAt])
  @@index([userId, tmdbId, mediaType])
  @@index([algorithm, shownAt])
  @@index([userId, action, shownAt])
}

model RecommendationSettings {
  userId           String   @id
  preferHighRating Boolean  @default(true)
  avoidRewatches   Boolean  @default(false)
  preferUnwatched  Boolean  @default(true)
  noveltyWeight    Float    @default(1.0)
  randomnessWeight Float    @default(1.0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  minRating        Float    @default(5.0)
  includeDropped   Boolean  @default(false)
  includeWant      Boolean  @default(true)
  includeWatched   Boolean  @default(true)
  includeMovie     Boolean  @default(true)
  includeTv        Boolean  @default(true)
  includeAnime     Boolean  @default(true)
  includeCartoon   Boolean  @default(true)
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WatchList {
  userId                    String
  tmdbId                    Int
  mediaType                 String
  addedAt                   DateTime        @default(now())
  statusId                  Int
  title                     String
  userRating                Int?
  voteAverage               Float
  id                        String          @id @default(cuid())
  watchedDate               DateTime?
  note                      String?
  watchCount                Int             @default(0)
  acceptanceCount           Int             @default(0)
  hiddenFromRecommendations Boolean         @default(false)
  hiddenReason              String?
  lastRecommendedAt         DateTime?
  recommendationCount       Int             @default(0)
  weightedRating            Float?
  ratingHistory             RatingHistory[]
  rewatchLogs               RewatchLog[]
  status                    MovieStatus     @relation(fields: [statusId], references: [id])
  user                      User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags                      Tag[]           @relation("TagToWatchList")

  @@unique([userId, tmdbId, mediaType])
  @@index([userId])
  @@index([tmdbId])
  @@index([statusId])
  @@index([addedAt])
  @@index([userRating])
  @@index([weightedRating])
  @@index([userId, statusId])
  @@index([userId, addedAt])
  @@index([userId, statusId, addedAt])
  @@index([watchCount])
  @@index([recommendationCount])
  @@index([lastRecommendedAt])
}

model RewatchLog {
  id                  String             @id @default(cuid())
  userId              String
  tmdbId              Int
  mediaType           String
  watchedAt           DateTime           @default(now())
  ratingBefore        Float?
  ratingAfter         Float?
  previousWatchCount  Int
  recommendationLogId String?
  recommendation      RecommendationLog? @relation(fields: [recommendationLogId], references: [id])
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  watchList           WatchList          @relation(fields: [userId, tmdbId, mediaType], references: [userId, tmdbId, mediaType], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
  @@index([tmdbId, mediaType])
  @@index([watchedAt])
  @@index([userId, watchedAt])
  @@index([recommendationLogId])
}

model RatingHistory {
  id                  String             @id @default(cuid())
  userId              String
  tmdbId              Int
  mediaType           String
  rating              Float
  actionType          String
  createdAt           DateTime           @default(now())
  previousRating      Float?
  ratingChange        Float?
  ratingSource        String?
  recommendationLogId String?
  recommendationLog   RecommendationLog? @relation(fields: [recommendationLogId], references: [id])
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  watchList           WatchList          @relation(fields: [userId, tmdbId, mediaType], references: [userId, tmdbId, mediaType], onDelete: Cascade, onUpdate: NoAction)

  @@index([userId])
  @@index([tmdbId, mediaType])
  @@index([createdAt])
  @@index([userId, tmdbId, mediaType])
  @@index([recommendationLogId])
}

model MovieStatus {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  watchLists WatchList[]

  @@map("MovieStatus")
}

model Tag {
  id                   String      @id @default(cuid())
  name                 String
  userId               String
  usageCount           Int         @default(0)
  createdAt            DateTime    @default(now())
  updatedAt            DateTime    @updatedAt
  isPromoted           Boolean     @default(false)
  recommendationCount  Int         @default(0)
  recommendationWeight Float       @default(1.0)
  user                 User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  watchLists           WatchList[] @relation("TagToWatchList")

  @@unique([userId, name])
  @@index([userId])
  @@index([usageCount])
  @@index([name])
  @@index([recommendationCount])
}

model Blacklist {
  id        Int      @id @default(autoincrement())
  userId    String
  tmdbId    Int
  mediaType String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, tmdbId, mediaType])
  @@index([userId])
  @@index([tmdbId])
  @@index([createdAt])
  @@index([userId, createdAt])
}

model RecommendationEvent {
  id            String             @id @default(cuid())
  userId        String
  parentLogId   String?
  eventType     String
  eventData     Json?
  sessionState  Json?
  timingMs      Int?
  timestamp     DateTime           @default(now())
  deviceContext Json?
  parentLog     RecommendationLog? @relation(fields: [parentLogId], references: [id], onDelete: Cascade)
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([parentLogId, timestamp])
  @@index([userId, timestamp])
  @@index([eventType, timestamp])
  @@index([parentLogId, eventType])
}

model FilterSession {
  id               String       @id @default(cuid())
  userId           String
  sessionId        String?
  startedAt        DateTime     @default(now())
  endedAt          DateTime?
  durationMs       Int?
  initialState     Json?
  finalState       Json?
  changesHistory   Json?
  resultMetrics    Json?
  abandonedFilters Json?
  status           String       @default("active")
  completedAt      DateTime?
  userSession      UserSession? @relation(fields: [sessionId], references: [sessionId])
  user             User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startedAt])
  @@index([status, startedAt])
  @@index([userId, status])
}

model UserSession {
  id             String          @id @default(cuid())
  sessionId      String          @unique
  userId         String
  startedAt      DateTime        @default(now())
  endedAt        DateTime?
  durationMs     Int?
  isActive       Boolean         @default(true)
  entryPoint     String?
  exitPoint      String?
  deviceContext  Json?
  sessionFlow    Json?
  outcome        String?
  outcomeMetrics Json?
  filterSessions FilterSession[]
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startedAt])
  @@index([outcome, startedAt])
  @@index([entryPoint, outcome])
  @@index([startedAt])
}

model IntentSignal {
  id                  String             @id @default(cuid())
  userId              String
  recommendationLogId String?
  signalType          String
  intensityScore      Float
  elementContext      Json?
  temporalContext     Json?
  userAgentContext    Json?
  predictedIntent     Json?
  createdAt           DateTime           @default(now())
  recommendationLog   RecommendationLog? @relation(fields: [recommendationLogId], references: [id], onDelete: Cascade)
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([recommendationLogId, signalType])
  @@index([intensityScore, signalType])
  @@index([signalType, createdAt])
}

model NegativeFeedback {
  id                  String            @id @default(cuid())
  userId              String
  recommendationLogId String
  feedbackType        String
  detailedReason      String?
  isExplicit          Boolean           @default(false)
  contextualFactors   Json?
  correctiveAction    Json?
  severity            Float             @default(1.0)
  durationMs          Int?
  createdAt           DateTime          @default(now())
  recommendationLog   RecommendationLog @relation(fields: [recommendationLogId], references: [id], onDelete: Cascade)
  user                User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([detailedReason, createdAt])
  @@index([feedbackType, severity])
  @@index([createdAt])
}

model AlgorithmExperiment {
  id                String    @id @default(cuid())
  experimentId      String    @unique
  name              String
  description       String?
  algorithmVersion  String
  variantLabel      String
  algorithmConfig   Json?
  status            String    @default("draft")
  trafficAllocation Float     @default(0)
  targetingCriteria Json?
  successMetrics    Json?
  experimentResults Json?
  startedAt         DateTime?
  completedAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([status, startedAt])
  @@index([algorithmVersion, status])
  @@index([experimentId, variantLabel])
  @@index([status, trafficAllocation])
}

model UserEmbedding {
  id               String   @id @default(cuid())
  userId           String   @unique
  vectorData       Json?
  embeddingVersion String?
  modelType        String?
  computedAt       DateTime @default(now())
  qualityMetrics   Json?
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([modelType])
  @@index([computedAt])
}

model MovieEmbedding {
  id               String   @id @default(cuid())
  tmdbId           Int      @unique
  mediaType        String
  vectorData       Json?
  embeddingVersion String?
  modelType        String?
  computedAt       DateTime @default(now())
  similarityCache  Json?

  @@index([tmdbId])
  @@index([mediaType])
  @@index([modelType])
  @@index([computedAt])
}

model PredictionLog {
  id                  String            @id @default(cuid())
  recommendationLogId String            @unique
  userId              String
  predictedScore      Float
  actualAction        String?
  predictionError     Float?
  modelVersion        String?
  featureVector       Json?
  computedAt          DateTime          @default(now())
  recommendationLog   RecommendationLog @relation(fields: [recommendationLogId], references: [id], onDelete: Cascade)
  user                User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([predictedScore])
  @@index([actualAction])
  @@index([modelVersion, computedAt])
  @@index([userId, computedAt])
}

model ModelVersion {
  id               String    @id @default(cuid())
  modelName        String    @unique
  version          String
  status           String    @default("staging")
  trainingConfig   Json?
  trainingDataInfo Json?
  metrics          Json?
  trainedAt        DateTime?
  deployedAt       DateTime?
  retiredAt        DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([modelName])
  @@index([status])
  @@index([deployedAt])
}

model RecommendationMetrics {
  id               String   @id @default(cuid())
  metricDate       DateTime @db.Date
  metricType       String
  segment          String   @default("all")
  aggregationLevel String   @default("daily")
  value            Float
  count            Int
  percentiles      Json?
  comparison       Json?
  computedAt       DateTime @default(now())
  periodStart      DateTime
  periodEnd        DateTime

  @@unique([metricDate, metricType, segment, aggregationLevel])
  @@index([metricType, periodEnd])
  @@index([segment, metricDate])
  @@index([metricDate])
  @@index([aggregationLevel, metricDate])
}

